{
	"name": "Import Dynamic Flow",
	"properties": {
		"activities": [
			{
				"name": "Get CSV Records",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Get Mapping IN",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false
					},
					"enableStaging": false,
					"translator": {
						"value": "@json(activity('Get Mapping IN').output.firstRow.json_output)",
						"type": "Expression"
					}
				},
				"inputs": [
					{
						"referenceName": "MassiveImports_StorageAccount",
						"type": "DatasetReference",
						"parameters": {
							"FileName": {
								"value": "@pipeline().parameters.FileName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "MassiveImports_SQL",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@activity('Create_Table_Import').output.firstRow.tableName",
								"type": "Expression"
							},
							"TableSchema": "dbo"
						}
					}
				]
			},
			{
				"name": "Execute SSIS",
				"type": "ExecuteSSISPackage",
				"dependsOn": [
					{
						"activity": "Get CSV Records",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"packageLocation": {
						"packagePath": {
							"value": "@pipeline().parameters.PackagePath",
							"type": "Expression"
						},
						"type": "SSISDB"
					},
					"connectVia": {
						"referenceName": "Italo-devtest-IntegrationRuntimeSSIS",
						"type": "IntegrationRuntimeReference"
					},
					"loggingLevel": "Basic",
					"projectParameters": {
						"MassiveImportRef": {
							"value": {
								"value": "@split(pipeline().parameters.FileName, '_')[0]",
								"type": "Expression"
							}
						},
						"TabName": {
							"value": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							}
						},
						"Dyn365ClientId": {
							"value": "0e4c4884-3aa4-4b80-869a-c49f4985b0aa"
						}
					}
				}
			},
			{
				"name": "Get Mapping OUT",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "Set NewFile_DisplayName",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderStoredProcedureName": {
							"value": "@pipeline().parameters.FindFlowMappingsSP_Name",
							"type": "Expression"
						},
						"storedProcedureParameters": {
							"mappingType": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.CategoryName",
									"type": "Expression"
								}
							},
							"operation": {
								"type": "String",
								"value": "OUT"
							}
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "MassiveImports_SQL",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							},
							"TableSchema": "dbo"
						}
					}
				}
			},
			{
				"name": "Write Result File",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Get Mapping OUT",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"metadata": [
								{
									"name": "DisplayName",
									"value": {
										"value": "@variables('NewFile_DisplayName')",
										"type": "Expression"
									}
								},
								{
									"name": "Category",
									"value": {
										"value": "@variables('NewFile_Category')",
										"type": "Expression"
									}
								},
								{
									"name": "CategoryCode",
									"value": {
										"value": "@variables('NewFile_CategoryCode')",
										"type": "Expression"
									}
								},
								{
									"name": "link",
									"value": "null"
								}
							]
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"value": "@json(activity('Get Mapping OUT').output.firstRow.json_output)",
						"type": "Expression"
					}
				},
				"inputs": [
					{
						"referenceName": "MassiveImports_SQL",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							},
							"TableSchema": "dbo"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "MassiveImports_StorageAccount",
						"type": "DatasetReference",
						"parameters": {
							"FileName": {
								"value": "@replace(pipeline().parameters.FileName, '.CSV','_RESULT.CSV')",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Delete Temp Table",
				"type": "SqlServerStoredProcedure",
				"dependsOn": [
					{
						"activity": "Write Result File",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"storedProcedureName": {
						"value": "@pipeline().parameters.DeleteTableSP_Name",
						"type": "Expression"
					},
					"storedProcedureParameters": {
						"TableName": {
							"value": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							},
							"type": "String"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "MassiveImports_SQL_LS",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Get Mapping IN",
				"type": "Lookup",
				"dependsOn": [
					{
						"activity": "Set CreatedTableName",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderStoredProcedureName": {
							"value": "@pipeline().parameters.FindFlowMappingsSP_Name",
							"type": "Expression"
						},
						"storedProcedureParameters": {
							"mappingType": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.CategoryName",
									"type": "Expression"
								}
							},
							"operation": {
								"type": "String",
								"value": "IN"
							}
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "MassiveImports_SQL",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							},
							"TableSchema": "dbo"
						}
					}
				}
			},
			{
				"name": "Set CreatedTableName",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Create_Table_Import",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "CreatedTableName",
					"value": {
						"value": "@activity('Create_Table_Import').output.firstRow.tableName",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Create_Table_Import",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderStoredProcedureName": {
							"value": "@pipeline().parameters.CreateTableSP_Name",
							"type": "Expression"
						},
						"storedProcedureParameters": {
							"tableName": {
								"type": "String",
								"value": "-"
							}
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "MassiveImports_SQL",
						"type": "DatasetReference",
						"parameters": {
							"TableName": {
								"value": "@variables('CreatedTableName')",
								"type": "Expression"
							},
							"TableSchema": "dbo"
						}
					}
				}
			},
			{
				"name": "Set NewFile_DisplayName",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Execute SSIS",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "NewFile_DisplayName",
					"value": {
						"value": "@replace(pipeline().parameters.DisplayName, '.CSV', '_RESULT.CSV')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"CreateTableSP_Name": {
				"type": "string"
			},
			"PackagePath": {
				"type": "string"
			},
			"EnvironmentPath": {
				"type": "string"
			},
			"FileName": {
				"type": "string"
			},
			"DeleteTableSP_Name": {
				"type": "string"
			},
			"FindFlowMappingsSP_Name": {
				"type": "string"
			},
			"CategoryName": {
				"type": "string"
			},
			"DisplayName": {
				"type": "string"
			}
		},
		"variables": {
			"CreatedTableName": {
				"type": "String"
			},
			"NewFile_DisplayName": {
				"type": "String"
			},
			"NewFile_Category": {
				"type": "String",
				"defaultValue": "Risultato"
			},
			"NewFile_CategoryCode": {
				"type": "String",
				"defaultValue": "999"
			}
		},
		"folder": {
			"name": "D365_MassiveImports"
		},
		"annotations": []
	}
}